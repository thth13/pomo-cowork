generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  username     String    @unique
  password     String
  avatarUrl    String?
  description  String?
  isAnonymous  Boolean   @default(false)
  isPro        Boolean   @default(false)
  proExpiresAt DateTime?
  profileViews Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  lastSeenAt   DateTime?

  // Settings
  workDuration   Int @default(25) // minutes
  shortBreak     Int @default(5) // minutes
  longBreak      Int @default(15) // minutes
  longBreakAfter Int @default(4) // sessions

  // Relations
  sessions PomodoroSession[]
  settings UserSettings?
  tasks    Task[]

  ownedRooms      Room[]       @relation("RoomOwner")
  roomMemberships RoomMember[]

  invitesSent     RoomInvite[]     @relation("RoomInviteInviter")
  invitesReceived RoomInvite[]     @relation("RoomInviteInvitee")
  notifications   Notification[]
  supportMessages SupportMessage[]
  chatMessages    ChatMessage[]    @relation("ChatMessages")
  referralLinks   ReferralLink[]
  referralSignups ReferralSignup[]
  wallMessagesReceived UserWallMessage[] @relation("WallProfileUser")
  wallMessagesSent     UserWallMessage[] @relation("WallAuthorUser")

  @@map("users")
}

model ReferralLink {
  id          String   @id @default(cuid())
  code        String   @unique
  label       String?
  isArchived  Boolean  @default(false)
  createdAt   DateTime @default(now())
  createdById String

  createdBy User             @relation(fields: [createdById], references: [id], onDelete: Cascade)
  clicks    ReferralClick[]
  signups   ReferralSignup[]

  @@index([createdById])
  @@map("referral_links")
}

model ReferralClick {
  id          String   @id @default(cuid())
  referralId  String
  fingerprint String
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  referral ReferralLink @relation(fields: [referralId], references: [id], onDelete: Cascade)

  @@unique([referralId, fingerprint])
  @@index([referralId, createdAt])
  @@map("referral_clicks")
}

model ReferralSignup {
  id         String   @id @default(cuid())
  referralId String
  userId     String
  createdAt  DateTime @default(now())

  referral ReferralLink @relation(fields: [referralId], references: [id], onDelete: Cascade)
  user     User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([referralId, userId])
  @@index([referralId, createdAt])
  @@map("referral_signups")
}

enum RoomPrivacy {
  PUBLIC
  PRIVATE
}

enum RoomInviteStatus {
  PENDING
  ACCEPTED
  DECLINED
}

enum NotificationType {
  ROOM_INVITE
}

model Room {
  id      String      @id @default(cuid())
  name    String
  privacy RoomPrivacy @default(PUBLIC)

  backgroundGradientKey String? @db.VarChar(32)

  ownerId String
  owner   User   @relation("RoomOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  members      RoomMember[]
  sessions     PomodoroSession[]
  invites      RoomInvite[]
  chatMessages ChatMessage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
  @@map("rooms")
}

model RoomMember {
  id        String   @id @default(cuid())
  roomId    String
  userId    String
  role      String   @default("MEMBER")
  createdAt DateTime @default(now())

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([roomId, userId])
  @@index([userId])
  @@map("room_members")
}

model RoomInvite {
  id        String           @id @default(cuid())
  roomId    String
  inviterId String
  inviteeId String
  status    RoomInviteStatus @default(PENDING)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  room    Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  inviter User @relation("RoomInviteInviter", fields: [inviterId], references: [id], onDelete: Cascade)
  invitee User @relation("RoomInviteInvitee", fields: [inviteeId], references: [id], onDelete: Cascade)

  notifications Notification[]

  @@unique([roomId, inviteeId])
  @@index([inviteeId])
  @@index([roomId])
  @@map("room_invites")
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  readAt    DateTime?
  createdAt DateTime         @default(now())

  roomInviteId String?
  roomInvite   RoomInvite? @relation(fields: [roomInviteId], references: [id], onDelete: SetNull)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, readAt])
  @@map("notifications")
}

model UserSettings {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Timer settings
  workDuration   Int @default(25)
  shortBreak     Int @default(5)
  longBreak      Int @default(15)
  longBreakAfter Int @default(4)

  // Sound settings
  soundEnabled Boolean @default(true)
  soundVolume  Float   @default(0.5)

  // Notification settings
  notificationsEnabled Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_settings")
}

model Task {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  title              String
  description        String  @default("")
  pomodoros          Int     @default(1) // Планируемое количество
  completedPomodoros Int     @default(0) // Фактически потраченное количество
  priority           String  @default("Средний") // "Критичный", "Высокий", "Средний", "Низкий"
  completed          Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tasks")
}

model PomodoroSession {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  roomId String?
  room   Room?   @relation(fields: [roomId], references: [id], onDelete: SetNull)

  task     String
  duration Int // in minutes
  type     String @default("WORK")
  status   String @default("ACTIVE")

  startedAt        DateTime  @default(now())
  endedAt          DateTime?
  completedAt      DateTime?
  pausedAt         DateTime?
  remainingSeconds Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([roomId])
  @@map("pomodoro_sessions")
}

model ChatMessage {
  id             String   @id @default(cuid())
  userId         String?
  user           User?    @relation("ChatMessages", fields: [userId], references: [id], onDelete: SetNull)
  roomId         String?
  room           Room?    @relation(fields: [roomId], references: [id], onDelete: SetNull)
  username       String
  text           String
  type           String   @default("message")
  actionType     String?
  actionDuration Int?
  actionTask     String?
  createdAt      DateTime @default(now())

  @@index([createdAt])
  @@index([roomId, createdAt])
  @@map("chat_messages")
}

model SupportMessage {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  name      String?
  email     String
  subject   String?
  message   String
  status    String   @default("NEW")
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([userId])
  @@map("support_messages")
}

model UserWallMessage {
  id            String   @id @default(cuid())
  profileUserId String
  authorId      String
  message       String
  createdAt     DateTime @default(now())

  profileUser User @relation("WallProfileUser", fields: [profileUserId], references: [id], onDelete: Cascade)
  author      User @relation("WallAuthorUser", fields: [authorId], references: [id], onDelete: Cascade)

  @@index([profileUserId, createdAt])
  @@index([authorId, createdAt])
  @@map("user_wall_messages")
}
